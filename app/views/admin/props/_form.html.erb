<%= form_for(@prop, :url => @prop.new_record? ? admin_props_path : admin_prop_path(@prop), :html => { :class => 'form-horizontal' }) do |f| %>

  <fieldset>
    <legend><%= controller.action_name.capitalize %> /Prop</legend>
    
    <div class="control-group">
      <%= f.label :title, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :title, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :description, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :description, :class => 'text_field' %>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :point, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :point, :class => 'text_field' %>
      </div>
    </div>
    
    <div class="control-group">
      <%= f.label :category_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.collection_select :category_id, Category.all, :id, :title %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', admin_props_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
