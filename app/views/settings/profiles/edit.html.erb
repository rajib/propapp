      <label class="control-label" for="fileInput">Picture</label>
      <div class="controls">
        <input class="input-file" id="fileInput" type="file">
      </div>
    </div> -->

    <div class="form-actions">
      <%= f.submit "Save changes", :class => 'btn btn-primary' %>
    </div>
  </fieldset>
<% end %>